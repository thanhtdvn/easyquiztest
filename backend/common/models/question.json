{
    "name": "Question",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "forceId": false,
    "scope": {
        "include": "answersForAQuestions"
    },
    "properties": {
        "Description": {
            "type": "string"
        },
        "DifficultLevel": {
            "type": "number"
        },
        "Categories": [
            {
                "title": "string",
                "code": "string"
            }
        ],
        "IsRandom": {
            "type": "boolean"
        },
        "Ref": {
            "type": "string"
        },
        "QuestionType" : {
            "type" : "string"
        },
        "ListAnswers": {
            "type": [
                {
                    "Content": {
                        "type": "string"
                    },
                    "IsCorrect": {
                        "type": "boolean",
                        "default" : false
                    }
                }
            ]
        }
    },
    "validations": [],
    "relations": {
        "answersForAQuestions": {
            "type": "hasMany",
            "model": "AnswersForAQuestion",
            "foreignKey": "QuestionId"
        }
    },
    "acls": [
        {
            "accessType": "WRITE",
            "principalType": "ROLE",
            "principalId": "admin",
            "permission": "ALLOW"
        }
    ],
    "methods": {}
}